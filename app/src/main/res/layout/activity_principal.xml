<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/backi"
    tools:context="com.example.ldp.MainActivity">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@drawable/dos" />

    <Button
        android:id="@+id/adminBoton"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@color/teal"
        android:drawableRight="@android:drawable/ic_menu_send"
        android:onClick="goToComprar"
        android:text="Usuario"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@color/teal"
        android:drawableRight="@android:drawable/stat_sys_warning"
        android:onClick="goToMain"
        android:text="Administrador"
        android:textColor="@color/white" />

</LinearLayout>
